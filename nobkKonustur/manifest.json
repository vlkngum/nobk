{
    "manifest_version": 3,
    "name": "NOBK Sesli Bot",
    "version": "1.1",
    "description": "Chatteki yazıları bota okutur.",
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://nobk-badge-back.vercel.app/*",
        "https://hyperbeam.com/*"
    ],
    "background": {
        "service_worker": "background/service.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://hyperbeam.com/*"
            ],
            "js": [
                "scripts/ttsBot.js"
            ],
            "css": [
                "scripts/ttsStyle.css"
            ]
        }
    ]
}